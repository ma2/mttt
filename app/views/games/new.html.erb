<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-lg">
  <div class="text-center mb-6">
    <img src="/logo.svg" alt="TicTacNine Logo" class="w-16 h-16 mx-auto mb-3">
    <h1 class="text-2xl font-bold">TicTacNine を始める</h1>
  </div>

  <%= form_with model: @game, url: games_path, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :mode, "対戦モード", class: "block font-medium text-center mb-4" %>
      <div class="space-y-3">
        <label for="mode_local" class="flex items-center p-3 rounded-lg border border-gray-200 hover:bg-gray-50 cursor-pointer transition-colors">
          <%= f.radio_button :mode, "local", checked: true, id: "mode_local", class: "mr-3" %>
          <div>
            <div class="font-medium">ローカル</div>
            <div class="text-sm text-gray-600">同じ画面で交互に操作</div>
          </div>
        </label>
        <label for="mode_pc" class="flex items-center p-3 rounded-lg border border-gray-200 hover:bg-gray-50 cursor-pointer transition-colors">
          <%= f.radio_button :mode, "pc", id: "mode_pc", class: "mr-3" %>
          <div>
            <div class="font-medium">PC と対戦</div>
            <div class="text-sm text-gray-600">PC はランダム</div>
          </div>
        </label>
        <label for="mode_net" class="flex items-center p-3 rounded-lg border border-gray-200 hover:bg-gray-50 cursor-pointer transition-colors">
          <%= f.radio_button :mode, "net", id: "mode_net", class: "mr-3" %>
          <div>
            <div class="font-medium">ネットワーク対戦</div>
            <div class="text-sm text-gray-600">オンライン</div>
          </div>
        </label>
      </div>
    </div>
    <div class="text-center">
      <%= f.submit "ゲーム開始", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors", id: "start-game-btn" %>
    </div>
  <% end %>
  
  <div class="mt-4 text-center">
    <%= link_to "あそびかた", howto_path, class: "text-blue-600 hover:text-blue-800 underline" %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const netRadio = document.querySelector('#mode_net');
    
    form.addEventListener('submit', function(e) {
      if (netRadio.checked) {
        e.preventDefault();
        window.location.href = '<%= network_games_join_path %>';
      }
    });
  });
</script>
