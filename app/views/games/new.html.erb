<h1 class="text-2xl font-bold mb-4">MTTT を始める</h1>

<%= form_with model: @game, url: games_path, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :mode, "対戦モード", class: "block font-medium" %>
    <div class="mt-2 space-x-4">
      <%= f.radio_button :mode, "local", checked: true, id: "mode_local" %>
      <%= f.label :mode_local, "ローカル (同じ画面で交互に操作)" %>
      <br>
      <%= f.radio_button :mode, "pc", id: "mode_pc" %>
      <%= f.label :mode_pc, "PC と対戦 (PC はランダム)" %>
      <br>
      <%= f.radio_button :mode, "net", id: "mode_net" %>
      <%= f.label :mode_net, "ネットワーク対戦 (後で実装)" %>
    </div>
  </div>
  <div>
    <%= f.submit "ゲーム開始", class: "px-4 py-2 bg-blue-600 text-white rounded" %>
  </div>
<% end %>
